<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="adapter"
            type="com.github.hiratasatoshi.sample.aaccontributors.presentation.adapter.ContributorListAdapter" />
        <variable
            name="viewModel"
            type="com.github.hiratasatoshi.sample.aaccontributors.presentation.viewmodel.ContributorListViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".presentation.activity.ContributorListActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contributor_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>